<html>

<head>

    <style>
        .alert{
            padding: 10px;
            color: white;
            text-align: center;
        }

        .alert-success{
            background-color: green;
        }

        .alert-error{
            background-color: red;
        }

        .alert-info{
            background-color: blue;
        }

    </style>
</head>


<body>



{% for type, messages in app.flashes %}

   {% for message in messages %}
        <div class="alert alert-{{ type }}" role="alert">
     {{ message }}
       </div>
{% endfor %}
  {% endfor %}

<a href="{{ path('app_pins_create') }}">creer un nouveau Pin</a>   <br>
<a href="{{ path('app_pins') }}">Afficher tous les Pins</a>

</body>
</html>





{% block contenu %}




<h1>{{ pluralize(pins|length, 'Pin','Pins') }}</h1>

{% for pin in pins %}
    <article>
        <h2><a href="{{ path('app_pins_show',{id:pin.id}) }}">{{ pin.title }}</a></h2>
        <h2>{{ pin.description }}</h2>
    </article>
    {%endfor %}
{% endblock %}
