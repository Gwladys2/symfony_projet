{% extends 'contact_me/index.html.twig' %}

{% block title %}La boutique{% endblock %}

{% block contenu %}
   <br><br>






<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div><br>
    {% endif %}


    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <h1 class="txt" style="text-align: center">Merci de vous connecter</h1><br>


    <div class="card">
        <div class="card-body">
    Votre Email<br><br>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br><br>
    Votre mot de Passe<br><br>
    <input  type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">


<br><br>
    <button class="txtes" style="text-align: center; color: white; background-color: black; border-radius: 5px" class="btn btn-lg btn-primary btn-sm" type="submit">
        Se connecter
    </button><br><br>
    <a style="text-align: center" href="{{ path('app_inscription_boutique')  }}">ou cr√©ez un compte</a>
</form>

    </div>
    </div>
</div>


{% endblock %}
