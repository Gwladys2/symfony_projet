{% extends 'boutique/index.html.twig'%}

{% block title %}Mes Adresses{% endblock %}

{% block contenu %}
    <h1>Mes adresses</h1><br><br>

    bonjour {{ app.user.firstname}}, <br> C'est dans cet espace que vous allez pouvoir gérer toutes vos adresses.<br>
 <hr>
    <a href="{{ path('app_compte_adress_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a><br>

{% if app.user.adresses| length ==0 %}
    <p class="text-center">Vous n'avez aucune adresse enrégistrée, merci d' en ajouter une.</p><br>


    {% else %}

    {% for address in app.user.adresses %}
        <div style="text-align: center">
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ address.name }}</h5>
                        <p class="card-text">{{ address.address }},
                            {{ address.postal }} -  {{ address.city }} - {{ address.country }},<br></p>
                       <p><a href="{{ path('app_compte_adress_edit', {'id':address.id}) }}">Modifier</a> | <a href="{{ path('app_compte_adress_delete', {'id':address.id}) }}">Supprimer</a></p>
                    </div>
                </div>
            </div>

    {% endfor %}

        </div>
        </div>


{% endif %}
{% endblock %}