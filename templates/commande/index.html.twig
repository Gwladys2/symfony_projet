{% extends 'boutique/index.html.twig' %}

{% block title %}valider ma commande-La boutique de Gwladys{% endblock %}

{% block contenu %}
<h2>Je passe ma commande</h2>
    <p>Choisissez vos péférences avant de passer commande</p>

    <hr>

    <div class="row">
        <div class="col-md-6">
            <b>Choisir mon adresse de livraison</b><br>
            {% set formHtml %}
            {{ form(form) }}
            {% endset %}
            {{ formHtml | replace({'[br]':'<br/>'}) |raw}}


            <b>Choisir mon transporteur</b>
        </div>
        <div class="col-md-6">
            <b>Récap de ma commande</b><br>
            <b>Bouton pour payer</b>
        </div>
    </div>
{% endblock %}
