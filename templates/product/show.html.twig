{% extends 'contact_me/index.html.twig' %}

{% block title %}{{ product.name }}- La boutique de Gwladys{% endblock %}

{% block contenu %}

<div class="row">
    <div class="col-md-4">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-8">
        <h3>{{ product.name }}</h3>
        <p>{{ product.subtitle }}</p>
       <span style="font-size: 18px; font-weight: bold"> {{ (product.price/100)|number_format(2) }} â‚¬</span>
        <hr>
        <p>
            {{ product.description }}
        </p>
       <a href="{{ path('ajout_to_cart', {'id':product.id}) }}" class="btn btn-primary">Ajouter panier</a>
    </div>
</div>

{% endblock %}